---

export interface Props {
    title: string;
    tech: string[];
}

const { title, tech } = Astro.props;

---

<div class="relative group">
    <div class="bg-purple-800 p-4 rounded shadow-2xl transition-transform duration-300 transform group-hover:-translate-y-4 hover:scale-105">
        <h3 class="font-semibold text-lg mb-2 text-white">{title}</h3>

        <ul class="list-disc list-inside text-white">

            { tech.map( ( t ) => ( 
                <li>{ t }</li>
            ) ) }
        </ul>

    </div>
</div>
